<launch>

<arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type waffle"/>
  <arg name="x_pos" default="0.0"/>
  <arg name="y_pos" default="0.0"/>
  <arg name="z_pos" default="0.0"/>

  <!-- Launch Gazebo with the specified world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find tom_and_jerry)/worlds/tom_and_jerry.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

  <!-- Spawn Tom robot model -->
  <!-- <node name="spawn_tom_robot" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-file $(find tom_and_jerry)/urdf/tom_robot.urdf -urdf -model tom_robot -x 0 -y 1 -z 0"/> -->

  <!-- Spawn Jerry robot model -->
  <!-- <node name="spawn_jerry_robot" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-file $(find tom_and_jerry)/urdf/jerry_robot.urdf -urdf -model jerry_robot -x 0 -y -1 -z 0"/> -->

  <!-- Start the Tom robot node -->
  <!-- <node pkg="tom_and_jerry" type="tom_robot.py" name="tom_robot" output="screen" /> -->

  <!-- Start the Jerry robot node -->
  <!-- <node pkg="tom_and_jerry" type="jerry_robot.py" name="jerry_robot" output="screen" /> -->

</launch>
